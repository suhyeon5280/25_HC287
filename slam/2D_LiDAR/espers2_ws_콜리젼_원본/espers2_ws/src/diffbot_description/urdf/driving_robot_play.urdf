<?xml version="1.0"?>
<robot name="driving_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">

        <link name = "base_link">
            <visual>
                <origin xyz = "0.0 0.0 0.0" rpy = "0.0 0.0 0.0"/>
                <geometry><mesh filename = "package://diffbot_description/meshes/legacy_from_main_description/base_link.stl" scale = "0.001 0.001 0.001"/></geometry>
            </visual>
            
            <collision>
                <origin xyz = "0.0 0.0 0.0" rpy = "0.0 0.0 0.0"/>
                <geometry><mesh filename = "package://diffbot_description/meshes/legacy_from_main_description/collision_stl_file/base_link_2.stl" scale = "0.001 0.001 0.001"/></geometry>
            </collision>

            <inertial>
                <origin xyz = "0.0 0.0 0.0" rpy = "0.0 0.0 0.0"/>
                <mass value = "17.0"/>
                <inertia ixx="0.1" iyy="0.1" izz="0.1" ixy="0" ixz="0" iyz="0"/>
            </inertial>
        </link>
        






        <link name = "left_wheel">
            <visual>
                <origin xyz = "-0.083 -0.140 -0.054" rpy = "0.0 0.0 0.0"/>
                <geometry><mesh filename = "package://diffbot_description/meshes/legacy_from_main_description/new_wheel_left.stl" scale = "0.001 0.001 0.001"/></geometry>
            </visual>

            <collision>
                <origin xyz = "-0.083 -0.140 -0.054" rpy = "0.0 0.0 0.0"/>
                <geometry><mesh filename = "package://diffbot_description/meshes/legacy_from_main_description/collision_stl_file/new_wheel_left.stl" scale = "0.001 0.001 0.001"/></geometry>
            </collision>

            <inertial>
                <origin xyz = "-0.083 -0.140 -0.054" rpy = "0.0 0.0 0.0"/>
                <mass value = "0.3"/>
                <inertia ixx="0.001" iyy="0.001" izz="0.001" ixy="0" ixz="0" iyz="0"/>
            </inertial>
        </link>


        <joint name = "left_wheel_joint" type = "continuous">
            <origin xyz = "0.083 0.140 0.054" rpy = "0.0 0.0 0.0"/>
            <parent link = "base_link"/>
            <child link = "left_wheel"/>
            <axis xyz = "0.0 1.0 0.0"/>
        </joint>








        <link name = "right_wheel">
            <visual>
                <origin xyz = "-0.083 0.140 -0.054" rpy = "0.0 0.0 0.0"/>
                <geometry><mesh filename = "package://diffbot_description/meshes/legacy_from_main_description/new_wheel_right.stl" scale = "0.001 0.001 0.001"/></geometry>
            </visual>

            <collision>
                <origin xyz = "-0.083 0.140 -0.054" rpy = "0.0 0.0 0.0"/>
                <geometry><mesh filename = "package://diffbot_description/meshes/legacy_from_main_description/collision_stl_file/new_wheel_right.stl" scale = "0.001 0.001 0.001"/></geometry>
            </collision>

            <inertial>
                <origin xyz = "-0.083 0.140 -0.054" rpy = "0.0 0.0 0.0"/>
                <mass value = "0.3"/>
                <inertia ixx="0.001" iyy="0.001" izz="0.001" ixy="0" ixz="0" iyz="0"/>
            </inertial>
        </link>
        
        
        <joint name = "right_wheel_joint" type = "continuous">
            <origin xyz = "0.083 -0.140 0.054" rpy = "0.0 0.0 0.0"/>
            <parent link = "base_link"/>
            <child link = "right_wheel"/>
            <axis xyz = "0.0 1.0 0.0"/>
        </joint>
        







        <link name="camera">
            <visual>
                <origin xyz = "0.0 0.0 0.0" rpy = "0.0 0.0 0.0"/>
                <geometry><mesh filename = "package://diffbot_description/meshes/legacy_from_main_description/camera.stl" scale = "0.001 0.001 0.001"/></geometry>
            </visual>

            <collision>
                <origin xyz = "0.0 0.0 0.0" rpy = "0.0 0.0 0.0"/>
                <geometry><mesh filename = "package://diffbot_description/meshes/legacy_from_main_description/collision_stl_file/camera.stl" scale = "0.001 0.001 0.001"/></geometry>
            </collision>

            <inertial>
                <mass value="0.1"/>
                <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
            </inertial>
        </link>

        <joint name="camera_joint" type="fixed">
            <parent link="base_link"/>
            <child link="camera"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <axis xyz="0 0 1"/>
        </joint>








        <link name="lidar">
            <visual>
                <origin xyz = "-0.15 0.0 -0.3" rpy = "0.0 0.0 0.0"/>
                <geometry><mesh filename = "package://diffbot_description/meshes/legacy_from_main_description/lidar.stl" scale = "0.001 0.001 0.001"/></geometry>
            </visual>

            <collision>
                <origin xyz = "-0.15 0.0 -0.3" rpy = "0.0 0.0 0.0"/>
                <geometry><mesh filename = "package://diffbot_description/meshes/legacy_from_main_description/collision_stl_file/lidar.stl" scale = "0.001 0.001 0.001"/></geometry>
            </collision>

            <inertial>
                <mass value="0.2"/>
                <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
            </inertial>
        </link>

        <joint name="lidar_joint" type="fixed">
            <parent link="base_link"/>
            <child link="lidar"/>
            <origin xyz="0.15 0 0.3" rpy="0 0 0"/>
            <axis xyz="0 0 1"/>
        </joint>


























        <gazebo>
            <plugin name="differential_drive_controller" filename="libgazebo_ros_diff_drive.so">
            <update_rate>50</update_rate>

            <left_joint>left_wheel_joint</left_joint>
            <right_joint>right_wheel_joint</right_joint>

            <wheel_separation>0.28</wheel_separation>
            <wheel_diameter>0.108</wheel_diameter>

            <max_wheel_torque>10</max_wheel_torque>
            <max_wheel_acceleration>5.0</max_wheel_acceleration>

            <command_topic>cmd_vel</command_topic>
            <publish_odom>true</publish_odom>
            <publish_odom_tf>true</publish_odom_tf>
            <publish_wheel_tf>true</publish_wheel_tf>
            <odometry_topic>odom</odometry_topic>
            <odometry_frame>odom</odometry_frame>
            <robot_base_frame>base_link</robot_base_frame>
            </plugin>
            <plugin name="joint_state_publisher" filename="libgazebo_ros_joint_state_publisher.so">
            <update_rate>50</update_rate>
            <joint_name>left_wheel_joint</joint_name>
            <joint_name>right_wheel_joint</joint_name>
            </plugin>
        </gazebo>

        <gazebo reference="camera">
            <sensor type="camera" name="camera">
            <update_rate>30.0</update_rate>
            <camera name="head"><horizontal_fov>1.3962634</horizontal_fov>
                <image>
                <width>800</width>
                <height>600</height>
                <format>R8G8B8</format>
                </image>
                
                <clip>
                    <near>0.02</near>
                    <far>300</far>
                </clip>

                <noise>
                    <type>gaussian</type>
                    <mean>0.0</mean>
                    <stddev>0.007</stddev>
                </noise>
            </camera>

            <plugin name="camera_controller" filename="libgazebo_ros_camera.so">
                <alwaysOn>true</alwaysOn>
                <updateRate>0.0</updateRate>
                <cameraName>camera</cameraName>
                <imageTopicName>image_raw</imageTopicName>
                <cameraInfoTopicName>camera_info</cameraInfoTopicName>
                <frameName>camera</frameName>
                <hackBaseline>0.07</hackBaseline>
                <distortionK1>0.0</distortionK1>
                <distortionK2>0.0</distortionK2>
                <distortionK3>0.0</distortionK3>
                <distortionT1>0.0</distortionT1>
                <distortionT2>0.0</distortionT2>
            </plugin>
            </sensor>
        </gazebo>


        <gazebo reference="lidar">
            <sensor type="ray" name="lidar">
            <pose>0 0 0 0 0 0</pose>
            <always_on>true</always_on>
            <visualize>true</visualize>
            <update_rate>10</update_rate>
            <ray>
            <scan>
                <horizontal>
                    <samples>360</samples>
                    <resolution>1.5</resolution>
                    <min_angle>-3.5</min_angle>  
                    <max_angle>1.9</max_angle>    
                </horizontal>
            </scan>
            <range>
                <min>0.04</min>
                <max>30.0</max>
                <resolution>0.01</resolution>
            </range>
            <noise>
                <type>gaussian</type>
                <mean>0.0</mean>
                <stddev>0.01</stddev>
            </noise>
            </ray>

        <plugin name="lidar_controller" filename="libgazebo_ros_ray_sensor.so">
                <ros>
          <namespace>/</namespace>
          <remapping>~/out:=scan</remapping>
                </ros>
                <output_type>sensor_msgs/LaserScan</output_type>
                <frame_name>lidar</frame_name>
            </plugin>
        </sensor>
        </gazebo>

</robot>
